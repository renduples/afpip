# Production Environment Variables
# Copy this to .env.production and fill in your values

# Environment
ENVIRONMENT=production

# GCP Configuration
GCP_PROJECT_ID=your-production-project-id
GCP_REGION=us-central1
GKE_CLUSTER=afpi-production-cluster

# Frontend
NEXT_PUBLIC_API_URL=https://api.afpi.yourdomain.com

# Backend Database (Cloud SQL)
# Use Cloud SQL Proxy or unix socket connection
DATABASE_URL=mysql+pymysql://afpi_user:STRONG_PASSWORD@/afpi?unix_socket=/cloudsql/PROJECT:REGION:INSTANCE
# Or with Cloud SQL Proxy: mysql+pymysql://afpi_user:STRONG_PASSWORD@127.0.0.1:3306/afpi

# Redis (Memorystore)
REDIS_URL=redis://10.0.0.3:6379

# Security
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_RANDOM_64_CHAR_STRING
ALLOWED_ORIGINS=https://afpi.yourdomain.com,https://api.afpi.yourdomain.com

# Vertex AI
VERTEX_AI_PROJECT=${GCP_PROJECT_ID}
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your-app-password
ADMIN_EMAIL=admin@yourdomain.com

# Data Sources
MAX_CONCURRENT_SCRAPES=5
SCRAPE_TIMEOUT_SECONDS=300
API_REQUEST_TIMEOUT=60

# File Upload Limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=csv,xlsx,pdf,json

# Cloud Storage
GCS_BUCKET_RAW_DATA=afpi-raw-data-prod
GCS_BUCKET_PROCESSED=afpi-processed-data-prod
GCS_BUCKET_MODELS=afpi-models-prod

# BigQuery
BIGQUERY_DATASET=afpi_analytics
BIGQUERY_LOCATION=US
